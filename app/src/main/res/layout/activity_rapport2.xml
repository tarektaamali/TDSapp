<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mpdam.info.tdsapp.Activity.RapportActivity">

    <EditText
        android:id="@+id/editid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="projet_id"
        android:inputType="number" />

    <EditText
        android:id="@+id/edittitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editid"
        android:layout_below="@+id/editid"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="votre note ici"
        android:inputType="textMultiLine"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/edittitle"
        android:layout_alignStart="@+id/edittitle" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="107dp"
        android:onClick="Btn"
        android:text="Button"
        android:layout_below="@+id/editnote"
        android:layout_alignStart="@+id/editnote" />

</RelativeLayout>
